<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.hyperion" name="Hyperion" version="0.0.6" provider-name="b2un0">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.common.plugin.cache" version="2.5.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py"/>
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <!--<extension point="xbmc.python.pluginsource" library="plugin.py"/>-->
    <extension point="xbmc.addon.metadata">
        <language/>
        <summary lang="en">Hyperion</summary>
        <description lang="en">JSON-RPC interface examples:

            {"jsonrpc":"2.0","id":1,"method":"Addons.ExecuteAddon",
            "params":{"addonid":"script.hyperion",
            "params":{"command":"color", "color":"green"}}}

            {"jsonrpc":"2.0","id":1,"method":"Addons.ExecuteAddon",
            "params":{"addonid":"script.hyperion",
            "params":{"command":"effect", "effect":"Snake"}}}

            {"jsonrpc":"2.0","id":1,"method":"Addons.ExecuteAddon",
            "params":{"addonid":"script.hyperion",
            "params":{"command":"clear"}}}

            {"jsonrpc":"2.0","id":1,"method":"Addons.ExecuteAddon",
            "params":{"addonid":"script.hyperion",
            "params":{"command":"switch"}}}
        </description>
        <website>http://www.z-index.net</website>
        <source>https://github.com/b2un0/kodi-script-hyperion/</source>
        <forum>http://powerpi.de/forum/viewtopic.php?t=190</forum>
        <email>bw@z-index.net</email>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    </extension>
</addon>
